<script src="https://apis.google.com/js/api.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/scripts/sign-in.js"></script>

<div class="row">
  <div class="col-lg-2 left">
    <div class="panel-group">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" href="#collapse1">Maps  <span class="glyphicon glyphicon-chevron-down"></span></a>
          </h4>
        </div>
        <div id="collapse1" class="panel-collapse collapse">
          <ul class="list-group">
          <% console.log(lists) %>
          <% for (let key in lists) {%>
            <li class="list-group-item"><a href="/map/<%= lists[key].id %>"><%= lists[key].name %></a></li>
          <% } %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <% if (user) {%>
  <div id='overlay' class="col-lg-6">
    <div id='overlay_header'>
      <div class="close">
        <span id='overlay_close' class="glyphicon glyphicon-remove"></span>
      </div>
      <!-- Maybe put a header here... -->
    </div>
    <div id='addList_view'>
      <% include _addList %>
    </div>
    <div id='favourites_view'>
      <% include _favourites %>
    </div>
    <div id='myLists_view'>
      <% include _myLists %>
    </div>
  </div>
    <div class="col-lg-2 right">
      <div class="panel-group">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title">
              <a data-toggle="collapse" href="#collapse2">Hello <%=user.name%>  <span class="glyphicon glyphicon-chevron-down"></span></a>
            </h4>
          </div>
          <div id="collapse2" class="panel-collapse collapse">
            <ul class="list-group">
              <li class="list-group-item"><a id='addList' href=''>Add a List</a></li>
              <li class="list-group-item"><a id='myLists' href=''>Show my Lists</a></li>
              <li class="list-group-item"><a id='favourites' href=''>Favourites</a></li>
              <li class="list-group-item"><a id='logout' href='/logout'>Log Out</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <%}%>
</div>
